{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "strict": true,
    "target": "es2022",
    "lib": [
      "es2024",
      "DOM"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": false,
    "types": [
      "codeceptjs",
      "node"
    ],
    "declaration": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "reports"
  ]
}
